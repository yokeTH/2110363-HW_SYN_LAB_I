{
    "verilog.formatting.verilogFormat.path": "/opt/verilog-format/verilog-format",
    "verilog.formatting.verilogFormat.settings": "${workspaceFolder}/.verilog-format.properties",
    "[verilog]": {
        "editor.defaultFormatter": "mshr-h.veriloghdl"
    },
    "verilog.formatting.verilogHDL.formatter": "verible-verilog-format",
    "verilog.formatting.veribleVerilogFormatter.arguments": "--indentation_spaces=4",
    "verible.arguments": [
        "--rules=-always-comb",
        "--file_list_path=${workspaceFolder}/verible.filelist",
        "--indentation_spaces=4"
    ],
}